<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/hintView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="Підказка буде тут"
        android:visibility="gone" />

    <EditText
        android:id="@+id/guessInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:hint="Введіть число"
        android:inputType="number"
        android:minHeight="48dp"
        android:textAlignment="center"
        android:visibility="gone"/>

    <Button
        android:id="@+id/actionControl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Підтвердити"
        android:layout_marginBottom="24dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/beginAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Розпочати гру"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:id="@+id/increaseControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Більше"
            android:visibility="gone"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/decreaseControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Менше"
            android:visibility="gone"
            android:layout_marginRight="8dp"/>
        <Button
            android:id="@+id/successControl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вгадав"
            android:visibility="gone"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modeContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/computerTry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загадує комп'ютер"
            android:layout_marginRight="8dp"/>

        <Button
            android:id="@+id/playerTry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Загадує гравець"/>
    </LinearLayout>

</LinearLayout>